<div class="contentactionbar content_bar_small_width">
    <div>
        <div style="float: left;" class="contentactionbuttonlabel text_image save_icon contentactionbuttonlabelI">
            <%= link_to("Save", "javascript:void(0);", :class => "high_availabilities_save") %>
        </div>
        <div style="float: left;" class="contentactionbuttonlabel contentactionbuttonlabelI text_image discard_icon">
            <%= link_to("Discard", "javascript:void(0);", :class => "high_availabilities_discard") %>
        </div>
        <div style="float: left;" class="contentactionbuttonlabel contentactionbuttonlabelI  text_image refresh_icon">
            <%= link_to("Refresh", "javascript:void(0);", :class => "high_availabilities_refresh") %>
        </div>
        <div style="float: left;" class="contentactionbuttonlabel contentactionbuttonlabelI text_image default_icon">
            <%= link_to("Default", "javascript:void(0);", :class => "high_availabilities_default") %>
        </div>
    </div>
    <span id="ajax_spinner"><%= image_tag("/images/ajax-loader.gif") %></span>
</div>
<style type="text/css">
    #ajax_spinner {
        left: 650px;
        position: absolute;
        top: 0;
		display:none;
    }
</style>
