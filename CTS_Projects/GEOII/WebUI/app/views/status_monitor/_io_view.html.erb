<table id="parent_window" width="100%" cellspacing="0" cellpadding="0" border="0">
	<tbody>
		<tr>
			<td width="49%" valign="top">
			<div id='logic_table' style="width:100%;">
				<table id = "tbl_digital_left" cellspacing="0" cellpadding="0"  width="100%" border="0" >
					<th colspan="3">Input</th>
					<% index = 0%>
					<%@input_params.each do |inputs|%>
					<% index = index + 1%>
					<tr height="25px;" class='<%= cycle("even", "odd") %>'>
						<%if inputs[:io_state] == 0 %> <td width ="20%"><%= image_tag("/images/ladder_logic/gray.png")%></td>
						<%elsif inputs[:io_state] == 1%> <td width ="20%"><%= image_tag("/images/ladder_logic/green.png")%></td>
						<%else%> <td width ="20%"><%= image_tag("/images/dt/whitecircle_blank_border.png")%></td>
						<%end%> <td class ="left"><%= inputs[:long_name]%></td>
					</tr>
					<%end%>
					<%(index..19).each do %>
					<tr height="25px;" class='<%= cycle("even", "odd") %>'>
						<td width ="20%"></td>
						<td class ="left"></td>
					</tr>
					<%end%>
				</table>
			</div></td>
			<td width="5px">&nbsp;</td>
			<td width="50%" valign="top">
			<div id='logic_table' style="width:100%;">
				<table id = "tbl_digital_left" cellspacing="0" cellpadding="0"  width="100%" border="0" >
					<th colspan="3">Output</th>
					<% index = 0%>
					<%@output_params.each do |outputs|%>
					<% index = index + 1%>
					<tr height="25px;" class='<%= cycle("even", "odd") %>'>
						<%if outputs[:io_state] == 0 %> <td width ="20%"><%= image_tag("/images/ladder_logic/gray.png")%></td>
						<%elsif outputs[:io_state] == 1%> <td width ="20%"><%= image_tag("/images/ladder_logic/green.png")%></td>
						<%else%> <td width ="20%"><%= image_tag("/images/dt/whitecircle_blank_border.png")%></td>
						<%end%> 
						<td class ="left"><%= outputs[:long_name]%></td>
					</tr>
					<%end%>
					<%(index..19).each do %>
					<tr height="25px;" class='<%= cycle("even", "odd") %>'>
						<td width ="20%"></td>
						<td class ="left"></td>
					</tr>
					<%end%>
				</table>
			</div></td>
		</tr>
	</tbody>
</table>

