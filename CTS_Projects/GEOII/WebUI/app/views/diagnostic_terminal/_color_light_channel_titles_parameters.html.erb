<div style="width:160px;float:left;padding:6px;font-size:12px;font-family:Arial;">
            <div style="width:75px;float:left;border:1px solid #000;">		
                <% @channel_titles.select{|title| title.channel_type.upcase.eql?("VLO") }.each_with_index do |channel, i| %>
		                <% vlo_mcf_params = get_color_mcf_parameters(mcfcrc, @online.card_index, "#{channel.channel_type.upcase}#{i+1}") %>
		                <% rt_param_hash = get_colour_code_rt_param(vlo_mcf_params, channel.channel_index, channel.channel_name2) %>
		                <div style="padding:0 5px;float:left;border-bottom: 1px solid; width:65px; <%= rt_param_hash['foreign_energy'].blank? ? "" : 'background-color:yellow;' %>">
		                    <div id="channel_title" style='padding-bottom:5px'>
		                        <%= get_rt_channel_name(channel) %>
		                    </div>
		                    <div style='float:left;'>
		                        <div style='float:left;width:20px;'>
		                            <%= rt_param_hash['lamp_image'] %>
		                        </div>
		                        <div style='float:right;width:30px;position:relative;top:-3px;text-align:right;'>
		                            <%= rt_param_hash['lamp_status'] %>
		                        </div>
		                    </div>
		                </div>
                <% end %>
            </div>
            <div style='width:75px;float:right;border:1px solid #000;'>
                <% vpi_index = 1 %>
                <% @channel_titles.select{|title| (title.channel_type.upcase.eql?("VRO") || title.channel_type.upcase.eql?("VPI"))  }.each do |channel| %>
	                <% if channel.channel_type == "VRO" %>
		                <% vro_mcf_params = get_color_mcf_parameters(mcfcrc, @online.card_index, channel.channel_type) %>
		                <% rt_param_vro = get_vro_output_mnemonic(vro_mcf_params) %>
		                <div style='float:left;padding:0 5px; border-bottom: 1px solid #000000;'>
		                    <div id="channel_title" style='padding-bottom:5px;'>
		                        <%= get_rt_channel_name(channel) %>
		                    </div>
		                    <div style='width:30px;float:left;padding-left:5px;'>
		                        <%= image_tag "dt/box.png", :size=> "11x11" %><span style='padding-left:3px;'><%= rt_param_vro['lamp_image'] %></span>
		                    </div>
		                    <div style='width:30px;float:right;'>
		                        <%= rt_param_vro['status'] %>
		                    </div>
		                </div>
	                <% end %>
	                <% if channel.channel_type == "VPI" %>
		                <% vpi_mcf_params = get_color_mcf_parameters(mcfcrc, @online.card_index, "#{channel.channel_type.upcase}#{vpi_index}") %>
		                <% rt_param_vpi = get_vro_output_mnemonic(vpi_mcf_params) %>
		                <div style='float:left;padding:5px; border-bottom: 1px solid #000000;'>
		                    <div style='padding-bottom:5px;' id="channel_title">
		                        <%= get_rt_channel_name(channel) %>
		                    </div>
		                    <div style='width:30px;float:left;padding-left:5px;'>
		                        <span style='padding-right:3px;'><%= rt_param_vpi['lamp_image'] %></span>
		                        <%= image_tag "dt/box.png", :size=> "11x11" %>
		                    </div>
		                    <div style='width:30px;float:right;'>
		                        <%= rt_param_vpi['status'] %>
		                    </div>
		                </div>
		                <% vpi_index += 1 %>
	                <% end %>
                <% end %>
            </div>
        </div>