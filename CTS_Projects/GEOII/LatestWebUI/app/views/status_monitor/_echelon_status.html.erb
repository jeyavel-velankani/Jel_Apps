<% if params[:auto_refresh].blank? %>
<%= javascript_include_tag 'echelon_status' %>
<div  id="div-one">
<% end %>
  <% unless @statuses.empty? %>
    <table cellspacing="0" cellpadding="0" border="0" class="logtable" width="100%">
      <thead>
        <tr>
            <%
              @headers.each do |header|%>
              <th class="title" width="120" style="color:#CFD631;font-size:12px;"><%=header.humanize%></th>
            <% end %>
        </tr>
      </thead>
      <tbody>
            <%@statuses.each do |status|%>
            <tr>
              <%@headers.each do |h| %>
                <td class="txtleft" height="25"><%=status[h.to_sym]%></td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% if params[:auto_refresh].blank? %>
</div>
<% end %>  

<script type="text/javascript">
  $('.logtable').flexigrid({height:'auto', striped:false});
</script>