<div style="width:80px;float:left;border:1px solid #000;">
    <% @channel_titles.select{|title| title.channel_type.upcase.eql?("VRO") }.each_with_index do |channel, i| %>
		<% if i < 4 %>
		    <% vro_mcf_params = get_color_mcf_parameters(@mcfcrc, @online.card_index, channel.channel_type.upcase) %>
		    <% rt_param_vro = get_vro_output_mnemonic(vro_mcf_params) unless vro_mcf_params.blank? %>
		    <div style='width:70px;float:left;padding:5px;border-bottom: 1px solid #000000;'>
		        <div style='padding-bottom:5px;' id="channel_title">
		            <%= get_rt_channel_name(channel) %>
		        </div>
		        <div style='float:left;'>
		            <%= image_tag "dt/box.png", :size=> "11x11" %><span style='padding-left:3px;'><%= rt_param_vro['lamp_image'] unless rt_param_vro.blank? %></span>
		        </div>
		        <div style='width:30px;float:right;'>
		            <%= rt_param_vro['status'] unless rt_param_vro.blank? %>
		        </div>
		    </div>
		<% end %>
    <% end %>
</div>
<div style='width:85px;float:right;border:1px solid #000;'>
    <% @channel_titles.select{|title| title.channel_type.upcase.eql?("VPI") }.each do |channel| %>
	    <% vpi_mcf_params = get_color_mcf_parameters(mcfcrc, @online.card_index, channel.channel_type.upcase) %>
	    <% rt_param_vpi = get_vro_output_mnemonic(vpi_mcf_params) unless vpi_mcf_params.blank? %>
	    <div style='width:75px;float:left;padding:5px;border-bottom: 1px solid #000000;'>
	        <div style='padding-bottom:5px;' id="channel_title">
	            <%= get_rt_channel_name(channel) %>
	        </div>
	        <div style='float:left;'>
	            <span style='padding-right:3px;'><%= rt_param_vpi['lamp_image'] unless rt_param_vpi.blank? %></span>
	            <%= image_tag "dt/box.png", :size=> "11x11" %>
	        </div>
	        <div style='width:30px;float:right;'>
	            <%= rt_param_vpi['status'] unless rt_param_vpi.blank? %>
	        </div>
	    </div>
    <% end %>
</div>
