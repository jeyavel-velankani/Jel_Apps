<div>	
  <table cellspacing="0" cellpadding="0" border="0" class="logtable" width="100%">
	<thead>	
		<tr>
			<th class="title" width="150" style="color:#CFD631;font-size:12px;">Card
			</th>
		    <th class="title" width="150" style="color:#CFD631;font-size:12px;">Bad CRC'S
			</th>                                
		    <th class="title" width="150" style="color:#CFD631;font-size:12px;">Lost Sessions
			</th>
		    <th class="title" width="150" style="color:#CFD631;font-size:12px;">Reboots
			</th>                                                                                    
		</tr>
	</thead>
	<tbody>	
    <% records_found = true
	   unless @card_infos.blank?%>	 
	 	<% counter = 1 %>
		<% for cardinfo in @card_infos %>
			<tr>
				<td class="txtleft"><%= counter %></td>
				<td class="txtleft"><%= cardinfo.bad_crcs %></td>
				<td class="txtleft"><%= cardinfo.lost_sessions %></td>
				<td class="txtleft"><%= cardinfo.reboots %></td>
			</tr>
			<% counter += 1 %>
		<% end %>
	<% else
		records_found = false
	   end %>
	</tbody>	
	</table>
</div>
<% if !records_found %>
	<div class='contentCSPlabel' style="padding:50px; text-align:center;">No device data found.</div>
<% end %>
<%= hidden_field_tag 'request_id', request_id %>

<script type="text/javascript">
  	$('.logtable').flexigrid({height:'auto', striped:false});
</script>
