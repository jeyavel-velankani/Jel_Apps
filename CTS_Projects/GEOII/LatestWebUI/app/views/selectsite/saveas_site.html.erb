<%= javascript_include_tag 'configuration_editor_popup' %>
<div class="saveas_content_area">
<%unless @sitelocation.blank? %>
	<span class='saveas_open_loader'><%= image_tag("/images/ajax-loader_white.gif") %></span>
	<div class="clear"></div>
	<div class="padding_left_10 text_font"><label>Save as site name : </label></div>
	<div class="clear"></div>
	<div class="padding_left_10"><%= text_field_tag "saveas_site_name", @saveassitename, :maxlength => 20, :size => 20, :class =>"contentCSPsel_saveas_sitename",:onchange=>"valudate_saveassitename();", :disabled => false, :html=>{:style => "text-transform:capitalize"}%></div>
	<div class="clear"></div>
	<div class="padding_left_10 mcf_file_margin_5">
	    <button id="btn_ok_saveas_site" class='btn_ok_saveas_site button_width_75'>Ok</button>
		<button class='cancel_button button_width_75'>Cancel</button>
	</div>
<%else%>
	<div>Please open existing site configuration and try again.</div>
<%end%>
</div>
